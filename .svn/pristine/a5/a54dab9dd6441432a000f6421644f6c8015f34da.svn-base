var total;
var curpage=1;//当前页
var pagesize=20;//每页显示的条数
$(function(){
	getList();
	getPage(total);
})
//分页
function getPage(total){
	layui.use("laypage",function(){
		var laypage=layui.laypage;
		laypage.render({
			elem:"test",
			limit:pagesize,//每页显示条数
			count:total,//总条数
			layout:['count','prev','page','next','limit','refresh','skip'],
			jump:function(obj,first){
				curpage=obj.curr;
				pagesize=obj.limit;
				if(!first){
					getList();
				}
			}
		})
	})
}//end
//点击新增弹出层
$("#insertManufacturer").click(function(){
	$("#fid").val("");
	$("#manufactureName").val("");
	$("#country").val("");
	$("#nature").val("");
	$("#location").val("");
	$("#manager").val("");
	$("#managerPhone").val("");
	$("#remark").val("");
	layer.open({
		type:1,
		title:"新增制造商",
		content:$("#manufacturer"),
