<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>路线设置-新增</title>
    <link rel="stylesheet" href="../css/common.css" />
    <link rel="stylesheet" href="../css/public1.css" />
    <link rel="stylesheet" href="css/list_style.css" />

</head>

<body>
    <div id="cme-main">
        <div class="main-content">
            <div class="main-form">
                <!--input开始-->
                <div class="form-term clearfix">
                    <div class="lable"><span>*</span>路线名称：</div>
                    <div class="control">
                        <input type="text" id="routeadd" name="routeName" autocomplete="off" class="input">
                    </div>
                </div>
                <!--input结束-->
            </div>
            <!--form-btn开始-->
            <div class="form-btn assignPerson">
                <a href="javascript:;" class="sure">确定</a>
                <a href="javascript:;" class="orange">取消</a>
            </div>
            <!--form-btn结束-->


        </div>

    </div>
    
    <script type="text/javascript" src="../js/jquery.min.js"></script>
    <script type="text/javascript" src="../hyf/path_js.js"></script>
    <script type="text/javascript" src="../js/common.js"></script>
    <script type="text/javascript" src="../js/layer/layer.js"></script>
    <script type="text/javascript">
        $(function() {
        	localStorage.removeItem("infos");
            //保存
            $(".form-btn a.sure").click(function() {
            	var routename=$("#routeadd").val();
            	var reg=/^[^\s]*$/;
            	if(routename==""){
            		layer.msg("请输入路线名称!",{time:2000});
            		return;
            	}
            	if(!reg.test(routename)){
            		layer.msg("不能输入空格!",{time:2000});
            		return;
            	}
                localStorage.infos = routename;
                $("#mainFrame",window.top.document).attr("src","patrol/route_setting_add.html");
                parent.layer.closeAll();
            });
            $(".form-btn a.orange").click(function(){
            	parent.layer.closeAll();
            })
        });

    </script>
</body>

</html>