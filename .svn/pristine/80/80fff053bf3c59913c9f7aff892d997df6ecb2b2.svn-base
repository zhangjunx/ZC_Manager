

.main-form .form-term .control .input1{ width: 60px; vertical-align: middle;}
.main-form .form-term .control .application{display: inline-block;margin:5px 0; vertical-align: middle; color: #555; font-size: 14px;}
.main-form .form-term .control .application-first{ padding-right: 10px;}
.main-form .form-term .control .application a{display: inline-block; font-size:12px; padding:0 16px; line-height:26px;border:1px solid #ddd; text-align: center; color:#555; border-left: 3px solid #ddd; border-radius: 3px;}
.main-form .form-term .control .ction{
	width: 66px;
    height: 30px;
    border: 1px solid #ddd;
    line-height: 30px;
    text-align: center;
    cursor:pointer;
}
.main-form .form-term .control .application.curr{ background: url(../images/selection_effect.png) no-repeat right bottom;border:1px solid #00A8EC;border-left: 3px solid #00A8EC;  }
.main-form .form-term .rest_day{ width: 346px; padding:10px; margin:6px 0 16px;display: inline-block;}
.main-form .form-term .control .checkbox{ width: 22px; margin: 0 4px;}

/*鏍囩寮�濮�*/
.main-form .form-term .control .fl{position: relative;border: 1px solid #2f8eed;border-radius: 3px;padding:0 10px;float: left;margin: 0 5px 10px;}
.main-form .form-term .control .fl a{display: block;line-height: 25px;color: #333;font-size: 12px;height: 25px;}
.main-form .form-term .control .fl span{position: absolute;right: 3px;top: -2px;font-size: 20px;color: #4197ee;cursor: pointer;}
.main-form .form-term .control .more{border: 1px solid #2f8eed;border-radius: 3px;padding: 0 15px;float: left;height: 25px;}
.main-form .form-term .control .more img{cursor: pointer;margin-top: -3px;}
.main-form .form-term .control .text{border: none;  margin: 0 5px 10px;padding: 0;}
.main-form .form-term .control .text input{width: 123px; height: 25px; outline: none; border: 1px solid #ccc; font-size: 14px; color: #333; border-radius: 3px; text-align: center;padding:0;}
	/*鏍囩缁撴潫*/
.main-form .btnbox{ width: 280px;}
.main-form .btnbox .form-term  .lable{ width: 80px;}
.main-form .btnbox .form-term .control select{ width: 180px;}
.main-form .btnbox .form-term .control .input{ width: 160px;}

.specified{float: left; max-height: 283px; padding: 0 20px;}
.specified span{
	color:#333;
}
.specified .personnel{width: 116px; height: 40px; border: 1px solid #ccc; float: left; border-radius:3px; margin: 0px 2px 10px 12px;}
.specified .personnel:hover{border: 1px solid #2a91e4;}
.specified .personnel.curr{ background: url(../images/selection_effect.png) no-repeat right bottom; border: 1px solid #2a91e4;}
.specified .personnel .portrait{width: 32px; height: 32px; float: left; border-radius:50%; margin: 4px 8px 4px 6px;}
.specified .personnel .portrait img{width: 32px; height: 32px;}
.specified .personnel .name{font-size: 14px; cursor:pointer; color: #333333; margin-top: 10px; float: left; text-align: left; width:60px; white-space:nowrap;text-overflow:ellipsis;display:inline-block;overflow:hidden;}
.main-form .btn {margin-left: 10px; width: 75px; height: 30px; line-height: 30px; background: #3aace9; text-align: center; border-radius: 3px;}
.main-form .btn a {color: #fff; display: block; font-size: 12px;}
			