			      {field:'supplierName', width:100 ,title: '供应商'},
			      {field:'projectName', width:100 ,title: '项目名称'},
			     // {field:'storeName', width:150 ,title: '所在仓库'},
			     // {field:'shelf', width:150,title: '存放货架'},
			      {field:'remark', title: '备注'},
			 ]],
		    page:true
		  });
		  
		//监听行单击事件
			table.on('row(demo)', function(obj){
